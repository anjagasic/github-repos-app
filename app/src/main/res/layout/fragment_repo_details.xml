<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivAvatarImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/page_margin"
            android:layout_marginTop="@dimen/page_margin"
            android:src="@drawable/ic_avatar_default"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/Circular" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvFullName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginEnd="@dimen/page_margin"
            android:fontFamily="@font/inter_semi_bold"
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/font_h1"
            app:layout_constraintBottom_toTopOf="@id/tvRepoName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivAvatarImage"
            app:layout_constraintTop_toTopOf="@id/ivAvatarImage"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Octocat" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvRepoName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:fontFamily="@font/inter_semi_bold"
            android:textColor="@color/textColor"
            android:textSize="@dimen/font_h2"
            app:layout_constraintBottom_toTopOf="@id/tvNumOfForks"
            app:layout_constraintEnd_toEndOf="@id/tvFullName"
            app:layout_constraintStart_toStartOf="@id/tvFullName"
            app:layout_constraintTop_toBottomOf="@id/tvFullName"
            tools:text="git-consortium" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNumOfForks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:drawableStart="@drawable/ic_forks"
            android:drawablePadding="@dimen/spacing_xsmall"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/font_p2"
            app:layout_constraintBottom_toBottomOf="@id/ivAvatarImage"
            app:layout_constraintEnd_toStartOf="@id/tvNumOfWatchers"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@id/tvFullName"
            app:layout_constraintTop_toBottomOf="@id/tvRepoName"
            tools:text="124 forks" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNumOfWatchers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:drawableStart="@drawable/ic_watchers"
            android:drawablePadding="@dimen/spacing_xsmall"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/font_p2"
            app:layout_constraintEnd_toEndOf="@id/tvFullName"
            app:layout_constraintStart_toEndOf="@id/tvNumOfForks"
            app:layout_constraintTop_toTopOf="@id/tvNumOfForks"
            tools:text="33 watchers" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginTop="30dp"
            android:background="@color/background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNumOfForks" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/page_margin"
            android:layout_marginTop="@dimen/spacing_large"
            android:drawableStart="@drawable/ic_tags"
            android:drawablePadding="@dimen/spacing_xsmall"
            android:fontFamily="@font/inter_semi_bold"
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/font_h2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            tools:text="Tags" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingHorizontal="@dimen/page_margin"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTags"
            tools:itemCount="2"
            tools:listitem="@layout/tag_item" />

        <ProgressBar
            android:id="@+id/loader"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTags" />

        <include
            android:id="@+id/noDataView"
            layout="@layout/no_data_view"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>